#include <iostream>
using namespace std;

int main() {
   int n;
   cout << "Введите число N: ";
   cin >> n;
   
   int k = 0; // начальное значение показателя степени
   while (n > 1) { // пока число больше 1
      n /= 2; // делим на 2
      k++; // увеличиваем показатель степени
   }
   
   cout << "Показатель степени: " << k << endl;
   
   return 0;
}
