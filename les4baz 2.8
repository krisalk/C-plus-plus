#include <iostream>
using namespace std;

int main() {
    const int size = 16;
    float arr[size] = {2.5, 1.8, 3.2, 4.7, 2.1, 5.6, 1.3, 6.7, 2.9, 4.5, 3.7, 1.9, 5.2, 3.4, 2.6, 4.1};

    int maxIndex = 0;
    int minIndex = 0;

    for (int i = 1; i < size; i++) {
        if (arr[i] > arr[maxIndex]) {
            maxIndex = i;
        }
        if (arr[i] < arr[minIndex]) {
            minIndex = i;
        }
    }

    cout << "Index of the maximum element: " << maxIndex << endl;
    cout << "Index of the minimum element: " << minIndex << endl;

    return 0;
}
