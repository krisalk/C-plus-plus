#include <iostream>

using namespace std;

int main()
{
    int arr[14];
    int evenSum = 0;
    int oddProduct = 1;

    for (int i = 0; i < 14; i++) {
        cout << "Введите " << i + 1 << "-й элемент массива: ";
        cin >> arr[i];

        if (i % 2 == 0) {
            evenSum += arr[i];
        }

        if (arr[i] % 2 != 0) {
            oddProduct *= arr[i];
        }
    }

    cout << "Сумма элементов четных по индексу: " << evenSum << endl;
    cout << "Произведение элементов нечетных по значению: " << oddProduct << endl;

    return 0;
}
