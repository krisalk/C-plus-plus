#include <iostream>

#include <cmath>

using namespace std;

const int MAX_ITERATIONS = 10; // граница ряда

double cos(double x) {

    double result = 1; // значение ряда при n = 0

    double term = 1; // текущий член ряда

    for (int n = 1; n <= MAX_ITERATIONS; n++) {

        term *= -1 * x * x / ((2 * n - 1) * (2 * n));

        result += term;

    }

    return result;

}



int main() {

    double x;

    cout << "Enter x value: ";

    cin >> x;

    cout << "cos(" << x << ") = " << cos(x) << endl;

    return 0;

}
